<Window x:Class="PCSX2Bonus.Views.wndErrorReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="wndErrorReport" Height="329" Width="440">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="61*"/>
			<RowDefinition Height="198*"/>
			<RowDefinition Height="40*"/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="tbMessage" Text="Message" />
		<TextBlock Grid.Row="1" x:Name="tbStackTrace" Text="StackTrace" />

		<TextBlock x:Name="lblInfo" Text="Report status" Grid.Row="0" Grid.RowSpan="2" Visibility="Hidden" Background="White"/>
		<Button x:Name="btnOk" Content="Whatever" Grid.Row="2" HorizontalAlignment="Right" Width="98" Click="btnOk_Click" />
		<Button x:Name="btnSend" Content="Send" Grid.Row="2" HorizontalAlignment="Right" Width="70" Margin="0,0,70,0" Click="btnSend_Click" Visibility="Hidden" />
	</Grid>
</Window>
