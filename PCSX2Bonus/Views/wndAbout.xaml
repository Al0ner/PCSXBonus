<Window x:Class="PCSX2Bonus.Views.wndAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="272" Width="312">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="58"/>
			<ColumnDefinition Width="239*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="52*"/>
			<RowDefinition Height="169*"/>
			<RowDefinition Height="34"/>
		</Grid.RowDefinitions>
		<Image Source="pack://siteoforigin:,,,/Resources/1.png" Margin="5,5,0,0" />
		<GroupBox Header="Developer" Grid.Row="0" Grid.Column="1">
			<Label Content="Dexbonus, CyberFox" />
		</GroupBox>
		<GroupBox Grid.Row="1" Header="Special Thanks" Grid.Column="1">
			<StackPanel>
				<Label Content="Omnikam (Quality Assurance)" />
				<Label Content="Spiral (Quality Assurance)" />
				<Label Content="Vsub (Quality Assurance)" />
				<Label Content="Bositman (Compatability status)" />
				<Label Content="Pocky (Quality Assurance)" />
			</StackPanel>
		</GroupBox>

		<Label Grid.Row="2" Content="Version: " HorizontalAlignment="Left" Width="80" Grid.ColumnSpan="2" Grid.Column="0"/>
		<Label Grid.Row="2" Content="2.0.0.2"   HorizontalAlignment="Left" Width="80" Grid.Column="1"/>
		<Button Grid.Row="2" Content="Ok" HorizontalAlignment="Right" Width="68" Margin="0,5,5,5" Grid.Column="1"/>
	</Grid>
</Window>
